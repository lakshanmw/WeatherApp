<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lakshan.weatherapp.MainActivity">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/city_filter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:paddingBottom="6dp"
        android:paddingTop="6dp">

        <TextView
            android:id="@+id/select_city_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_gravity="start"
            android:layout_marginStart="16dp"
            android:fontFamily="sans-serif-medium"
            android:text="@string/select_city_id"
            android:textSize="14sp"
            android:textStyle="normal" />


        <Spinner
            android:id="@+id/city_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:dropDownWidth="wrap_content"
            android:spinnerMode="dropdown" />

    </RelativeLayout>

    <TextView
        android:id="@+id/city_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/city_filter"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="City Name"
        android:textColor="@color/color_primary"
        android:textSize="18sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/id_section"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/city_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/city_id_text"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="City ID"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/city_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/city_id_text"
            android:text="City ID"
            android:textColor="@color/color_primary" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/description_section"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_section"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/description_text"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="description"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/server_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/description_text"
            android:text="description"
            android:textColor="@color/color_primary" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/temp_section"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/description_section"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/temp_section_text"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Temperature"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/temp_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/temp_section_text"
            android:text="25"
            android:textColor="@color/color_primary" />

    </RelativeLayout>

</RelativeLayout>
